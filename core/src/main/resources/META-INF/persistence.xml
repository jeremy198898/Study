<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="1.0">

    <persistence-unit name="jpa-core" transaction-type="RESOURCE_LOCAL">
        <description>example of enabling the second level cache.</description>
        <!-- If you do not set transaction-type or just use non-jta-data-source tag,
         it automatically recognizes transaction-type as RESOURCE_LOCAL and vice versa.-->
        <non-jta-data-source>
            java:jboss/datasources/PostgresqlDS
        </non-jta-data-source>
    </persistence-unit>

</persistence>